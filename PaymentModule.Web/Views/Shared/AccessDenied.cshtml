@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center mt-5">
    <div class="card shadow-sm p-5 mx-auto" style="max-width: 500px;">
        <h1 class="text-danger mb-3">
            <i class="bi bi-shield-lock-fill"></i> Access Denied
        </h1>
        <p class="lead mb-4">You don't have permission to access this feature! Please try another account.</p>
        <a asp-controller="User" asp-action="Login" class="btn btn-primary">
            <i class="bi bi-house-door"></i> Back to Home page
        </a>
    </div>
</div>
