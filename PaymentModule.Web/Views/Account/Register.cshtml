@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="register-wrapper">
    <!-- Left side image -->
    <div class="register-left">
        <img src="~/images/register-banner.jpg" alt="Register Banner" />
    </div>

    <!-- Right side form -->
    <div class="register-right">
        <div class="register-box">
            <img src="~/images/ebay-logo.png" alt="eBay" class="ebay-logo-small" />

            <h1>Create an account</h1>

            <div class="tab-select">
                <button class="tab active" id="personalBtn">Personal</button>
                <button class="tab" id="businessBtn">Business</button>
            </div>

            <form method="post" id="registerForm" class="register-form">
                <div class="form-row">
                    <input type="text" id="firstName" placeholder="First name" required />
                    <input type="text" id="lastName" placeholder="Last name" required />
                </div>

                <input type="email" id="email" placeholder="Email" required />

                <div class="password-row">
                    <input type="password" id="password" placeholder="Password" required />
                    <i class="fa-regular fa-eye"></i>
                </div>

                <p class="terms">
                    By selecting Create personal account, you agree to our
                    <a href="#">User Agreement</a> and acknowledge reading our
                    <a href="#">User Privacy Notice</a>.
                </p>

                <button type="submit" class="btn-create" disabled>Create personal account</button>

                <div class="divider">
                    <span>or continue with</span>
                </div>

                <div class="social-buttons">
                    <button type="button" class="btn-google">
                        <i class="fa-brands fa-google"></i> Google
                    </button>
                    <button type="button" class="btn-facebook">
                        <i class="fa-brands fa-facebook"></i> Facebook
                    </button>
                    <button type="button" class="btn-apple">
                        <i class="fa-brands fa-apple"></i> Apple
                    </button>
                </div>

                <!-- Cập nhật liên kết Sign in -->
                <div class="sign-in-link">
                    <a href="/Account/Login">Already have an account? Sign in</a>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    // Toggle tab Personal / Business
    document.getElementById("personalBtn").addEventListener("click", () => {
        document.getElementById("personalBtn").classList.add("active");
        document.getElementById("businessBtn").classList.remove("active");
    });
    document.getElementById("businessBtn").addEventListener("click", () => {
        document.getElementById("businessBtn").classList.add("active");
        document.getElementById("personalBtn").classList.remove("active");
    });

    // Show/Hide password
    document.querySelector(".password-row i").addEventListener("click", function () {
        const pwd = this.previousElementSibling;
        pwd.type = pwd.type === "password" ? "text" : "password";
        this.classList.toggle("fa-eye-slash");
    });

    // Enable Create button only if all fields filled
    const inputs = document.querySelectorAll("#registerForm input[required]");
    const submitBtn = document.querySelector(".btn-create");

    inputs.forEach(input => {
        input.addEventListener("input", () => {
            const allFilled = Array.from(inputs).every(i => i.value.trim() !== "");
            submitBtn.disabled = !allFilled;
            submitBtn.classList.toggle("active", allFilled);
        });
    });
</script>